{
    "instrument": {
        "id": "urn:instrument",
        "version": "1.0"
    },
    "defaultLocalization": "en",
    "title": {
      "en": "Form which demonstrates recordList widget"
    },
    "pages": [
        {
            "id": "page1",
            "elements": [
                {
                    "type": "question",
                    "options": {
                        "fieldId": "q_list",
                        "text": {
                            "en": "List all your favourite things"
                        },
                        "error": {
                            "en": "At least two elements should be present"
                        },
                        "questions": [
                            {
                                "fieldId": "q_thing",
                                "text": {
                                    "en": "What do you like?"
                                }
                            },
                            {
                                "fieldId": "q_like",
                                "text": {
                                    "en": "How much do you like it?"
                                }
                            }
                        ],
                        "events": [
                            {
                                "action": "fail",
                                "trigger": "if(q_list,q_list.value.length<2,true())"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}
