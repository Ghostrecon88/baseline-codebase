{
    "instrument": {
        "id": "urn:test-instrument",
        "version": "1.1"
    },
    "defaultLocalization": "en",
    "title": {
        "en": "Form with triggers for hidden pages"
    },
    "pages": [
        {
            "id": "page1",
            "elements": [
                {
                    "type": "question",
                    "options": {
                        "fieldId": "q_name",
                        "text": {
                            "en": "What's your name?"
                        }
                    }
                },
                {
                    "type": "question",
                    "options": {
                        "fieldId": "q_age",
                        "text": {
                            "en": "How old are you?"
                        },
                        "help": {
                            "en": "If you are more than 18 years old you should answer for more questions!"
                        },
                        "events": [
                            {
                                "action": "hide",
                                "trigger": "q_age<18",
                                "targets": ["page2"]
                            }
                        ]
                    }
                }
            ]
        },
        {
            "id": "page2",
            "elements": [
                {
                    "type": "question",
                    "options": {
                        "fieldId": "q_city",
                        "text": {
                            "en": "City?"
                        }
                    }
                },
                {
                    "type": "question",
                    "options": {
                        "fieldId": "q_country",
                        "text": {
                            "en": "Country?"
                        }
                    }
                }
            ]
        },
        {
            "id": "page3",
            "elements": [
                {
                    "type": "question",
                    "options": {
                        "fieldId": "q_place",
                        "text": {
                            "en": "Place?"
                        }
                    }
                }
            ]
        }
    ]
}

