{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "id": "http://rexdb.com/assessment/0.4.0#",
    "title": "Generic Assessment Definition",

    "definitions": {
        "instrumentType": {
            "type": "object",

            "properties": {
                "id": {
                    "type": "string",
                    "format": "uri"
                },

                "version": {
                    "type": "string",
                    "pattern": "^[0-9]+\\.[0-9]+$"
                }
            },

            "required": [
                "id",
                "version"
            ],

            "additionalProperties": false
        },

        "metaCollectionType": {
            "type": "object",

            "minProperties": 1
        },

        "integerDataType": {
            "oneOf": [
                { "type": "integer" },
                { "type": "null" }
            ]
        },

        "floatDataType": {
            "oneOf": [
                { "type": "number" },
                { "type": "null" }
            ]
        },

        "textDataType": {
            "oneOf": [
                { "type": "string" },
                { "type": "null" }
            ]
        },

        "booleanDataType": {
            "oneOf": [
                { "type": "boolean" },
                { "type": "null" }
            ]
        },

        "dateDataType": {
            "oneOf": [
                {
                    "type": "string",
                    "pattern": "^[0-9]{4}-(?:0[1-9]|1[0-2])-(?:[0-2][0-9]|3[0-1])$"
                },
                { "type": "null" }
            ]
        },

        "timeDataType": {
            "oneOf": [
                {
                    "type": "string",
                    "pattern": "^(?:[0-1][0-9]|2[0-3]):(?:[0-5][0-9]):(?:[0-5][0-9])$"
                },
                { "type": "null" }
            ]
        },

        "dateTimeDataType": {
            "oneOf": [
                {
                    "type": "string",
                    "pattern": "^[0-9]{4}-(?:0[1-9]|1[0-2])-(?:[0-2][0-9]|3[0-1])T(?:[0-1][0-9]|2[0-3]):(?:[0-5][0-9]):(?:[0-5][0-9])$"
                },
                { "type": "null" }
            ]
        },

        "recordListDataType": {
            "oneOf": [
                {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/valueCollectionType"
                    },
                    "minItems": 1,
                    "additionalItems": false
                },
                { "type": "null" }
            ]
        },

        "matrixDataType": {
            "oneOf": [
                {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z](?:[a-z0-9]|[_-](?![_-]))*[a-z0-9]$": {
                            "$ref": "#/definitions/valueCollectionType"
                        }
                    },
                    "minProperties": 1,
                    "additionalProperties": false
                },
                { "type": "null" }
            ]
        },

        "enumerationDataType": {
            "oneOf": [
                { "type": "string" },
                { "type": "null" }
            ]
        },

        "enumerationSetDataType": {
            "oneOf": [
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "additionalItems": false
                },
                { "type": "null" }
            ]
        },

        "valueType": {
            "type": "object",

            "properties": {
                "value": {
                    "anyOf": [
                        { "$ref": "#/definitions/integerDataType" },
                        { "$ref": "#/definitions/floatDataType" },
                        { "$ref": "#/definitions/textDataType" },
                        { "$ref": "#/definitions/booleanDataType" },
                        { "$ref": "#/definitions/enumerationDataType" },
                        { "$ref": "#/definitions/enumerationSetDataType" },
                        { "$ref": "#/definitions/dateDataType" },
                        { "$ref": "#/definitions/timeDataType" },
                        { "$ref": "#/definitions/dateTimeDataType" },
                        { "$ref": "#/definitions/recordListDataType" },
                        { "$ref": "#/definitions/matrixDataType" }
                    ]
                },

                "explanation": {
                    "$ref": "#/definitions/textDataType"
                },

                "annotation": {
                    "$ref": "#/definitions/textDataType"
                },

                "meta": {
                    "$ref": "#/definitions/metaCollectionType"
                }
            },

            "required": [
                "value"
            ],

            "additionalProperties": false
        },

        "valueCollectionType": {
            "type": "object",

            "patternProperties": {
                "^[a-z](?:[a-z0-9]|[_-](?![_-]))*[a-z0-9]$": {
                    "$ref": "#/definitions/valueType"
                }
            },

            "minProperties": 1,

            "additionalProperties": false
        }
    },

    "type": "object",

    "properties": {
        "instrument": {
            "$ref": "#/definitions/instrumentType"
        },

        "meta": {
            "$ref": "#/definitions/metaCollectionType"
        },

        "values": {
            "$ref": "#/definitions/valueCollectionType"
        }
    },

    "required": [
        "instrument",
        "values"
    ],

    "additionalProperties": false
}

